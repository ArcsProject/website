@using System.Configuration;
@{
    bool isDev = false;
    if (ConfigurationManager.AppSettings.Get("IsDevEnvironment")?.ToLower() == "true")
    {
        isDev = true;
    }

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="cache-control" content="no-store" />

    <title>American Romanian Cultural Society</title>

    <base href="/" />
    @if (isDev){    <script type="text/javascript">window.IsDev = true;</script>}
    @if (!isDev)
    {
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-118578509-1', 'auto');
            ga('send', 'pageview');
        </script>
    }

    <link href="Styles/External/bootstrap.min.css" rel="stylesheet">

    <link href="Styles/main-page.css" rel="stylesheet">

    <link rel="apple-touch-icon" sizes="180x180" href="/Resources/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Resources/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Resources/favicon/favicon-16x16.png">
    <link rel="manifest" href="/Resources/favicon/site.webmanifest">
    <link rel="mask-icon" href="/Resources/favicon/safari-pinned-tab.svg" color="#f29d38">
    <meta name="msapplication-TileColor" content="#f29d38">
    <meta name="theme-color" content="#f29d38">
</head>
<body ng-app="arcsApp">
    <!-- Required SDK for facebook integration. -->
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <ng-include src="'Views/navbar.html'"></ng-include>

    <ui-view></ui-view>

    <footer>
        <nav class="navbar">
            <div class="container-fluid">
                <div class="row center-text">
                    <div class="col-md-3 col-sm-4">
                        <p>Website preview. More updates coming!</p>
                        <p>Copyright &copy; 2018 American Romanian Cultural Society</p>
                    </div>
                    <div class="col-md-3 col-sm-4">
                        <a href="#" type="button" class="btn btn-info" ui-sref="contact">Contact Us</a>
                        <p>We'd love to hear from you!</p>
                    </div>
                    <div class="col-md-3 col-sm-4">
                        <a href="#" type="button" class="btn btn-info" ui-sref="press">Press</a>
                        <p>Looking for more information?</p>
                    </div>
                    <div class="col-md-3">
                        <div class="fb-like" data-href="https://www.facebook.com/ARCSPROJECT/" data-width="250" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div>
                    </div>
                </div>
            </div>
        </nav>
    </footer>

    <script src="Scripts/External/jquery.min.js"></script>
    <script src="Scripts/External/bootstrap.min.js"></script>
    <script src="Scripts/External/angular.min.js"></script>
    <script src="Scripts/External/angular-ui-router.min.js"></script>

    <script src="Scripts/controllers.js?cookie=abc123"></script>
</body>
</html>